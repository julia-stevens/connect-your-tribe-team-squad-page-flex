{% render 'partials/head.liquid', title: 'Squad page' %}

{% render 'partials/header.liquid', title: 'Header' %}

<aside>
    {% render 'partials/choosebtn.liquid' %}
</aside>


<main class="container">
    <section class="left">
        <p class="person-name">{{ person.name }}</p>
        {% if person.avatar == null or person.avatar == "" or person.avatar == undefined %}
            <img class="profile-image" src="/assets/altperson.png" alt="Profile image">
        {% else %}
            <img class="profile-image" src="{{ person.avatar }}" alt="Profile image">
        {% endif %}
    </section>

    <section class="right">
        <p>   
            {% assign birth_timestamp = person.birthdate | date: '%s' | default: 0 %}
            {% assign now_timestamp = 'now' | date: '%s' %}
            {% assign age = now_timestamp | minus: birth_timestamp | divided_by: 31556952 | floor %}
            leeftijd: {{ age }}👤
    
        </p>
        <p>Github handle: {{ person.github_handle }}🤓</p>
        <p>Github Link: <a href="https://github.com/{{ person.github_handle }}" target="_blank">Bekijk profiel 🔗</a></p>
        <p>Bijnaam: {{ person.nickname }}🤪</p>
        <p>Favoriete property: {{ person.fav_property }}❤️</p>
    </section>
    
</main>


